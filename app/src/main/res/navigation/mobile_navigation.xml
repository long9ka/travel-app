<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.travelapp.ui.home.HomeFragment"
        android:label="@string/title_list_tour"
        tools:layout="@layout/fragment_list_tour" />

    <fragment
        android:id="@+id/navigation_create_tour"
        android:name="com.example.travelapp.ui.createTour.CreateTourFragment"
        android:label="@string/title_create_tour"
        tools:layout="@layout/fragment_create_tour" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.travelapp.ui.setting.Setting"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" />
</navigation>