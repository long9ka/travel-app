    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adress1"
            android:textAlignment="center"
            android:textSize="10pt"
            android:text="Adress:"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />


        <TextView
            android:id="@+id/full_name"
            android:textAlignment="center"
            android:textSize="10pt"
            android:text="Hồ Chí Minh"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Date:"
            android:textSize="10pt" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:textAlignment="center"
            android:text="12/12/2000 - 12/12/3000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/adults1"
            android:text="Adults:"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginHorizontal="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/adults"
            android:text="2"
            android:textSize="10pt"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/childs1"
            android:text="Childs:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="10pt"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/childs"
            android:text="2"
            android:textSize="10pt"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/costs1"
            android:textSize="10pt"
            android:text="Cost:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            android:id="@+id/costs"
            android:textSize="10pt"
            android:text="0 - 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>